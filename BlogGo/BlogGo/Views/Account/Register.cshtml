@model BlogGo.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<!-- Inicio de sesión -->
<header class="masthead text-white text-center fondo-login">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Regístrate en BlogGo!</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <!-- Nombre -->
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ingresa tu nombre" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Apellido -->
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Ingresa tu apellido" })
                            @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Correo -->
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingresa tu correo" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Confirmar contraseña -->
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Reingresa tu contraseña" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Botón de registración -->
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <input type="submit" value="Registrarse" class="btn btn-block btn-lg btn-primary boton-loginreg" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->

    <!-- Enlace a inicio -->
    <div class="row">
        <div class="col-md-4">
            <p class="texto-login">
                @Html.ActionLink("<< Volver a Inicio", "Index", "Home", null, new { @class = "enlace-loginreg" })
            </p>
        </div>
    </div>
</header>


